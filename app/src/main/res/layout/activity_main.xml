<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RadioGroup
        android:id="@+id/rg_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/home_tab_back"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_home"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:tag="0"
            android:text="首页"
            android:textColor="@color/selector_tab_color"
            android:textSize="10sp" />

        <RadioButton
            android:id="@+id/rb_find"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_find"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:tag="1"
            android:text="发现"
            android:textColor="@color/selector_tab_color"
            android:textSize="10sp" />


        <RadioButton
            android:id="@+id/rb_me"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/selector_tab_me"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:tag="2"
            android:text="更多"
            android:textColor="@color/selector_tab_color"
            android:textSize="10sp" />


    </RadioGroup>


    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/rg_tab" />

</RelativeLayout>
